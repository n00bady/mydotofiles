{
    // Workspaces
    "hyprland/workspaces" : {
		"sort": "id",
        "on-click": "activate",
		"on-scroll-up": "~/.hyprScripts/workspaceChanger.sh +",
		"on-scroll-down": "~/.hyprScripts/workspaceChanger.sh -",
        "active-only": false,
        "all-outputs": false,
        "format": "{}",
        "format-icons": {
			"urgent": "",
			"active": "",
			"default": ""
        },
        "persistent-workspaces": {
            "HDMI-A-1": [1, 3, 5, 7],
			"HDMI-A-2": [2, 4, 6, 8]
        }       
    },

    // Hyprland Window
    "hyprland/window": {
        "rewrite": {
            "(.*) - Brave": "$1",
            "(.*) - Chromium": "$1",
            "(.*) - Brave Search": "$1",
            "(.*) - Outlook": "$1",
            "(.*) Microsoft Teams": "$1"
        },
        "separate-outputs": true,
		"min-length": 40,
		"max-length": 90,
    },
    
    // Power Menu
    "custom/exit": {
        "format": "",
        "tooltip-format": "Powermenu",
        "on-click": "wlogout -b 4",
        "tooltip": false
    },

    // Keyboard State
    "keyboard-state": {
        "capslock": true,
        "format": " {icon} ",
        "format-icons": {
            "locked": "\udb82\ude9b",
            "unlocked": ""
        }
    },

    // System tray
    "tray": {
        "icon-size": 20,
        "spacing": 8
    },

    // Clock
    "clock": {
		"min-length": 4,
		"timezone": "Greece/Athens",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}",
		"calendar": {
            "mode"          : "year",
            "mode-mon-col"  : 3,
			"weeks-pos"     : "right",
            "on-scroll"     : 1,
            "format": {
                "months":     "<span color='#ffead3'><b>{}</b></span>",
                "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                "today":      "<span color='#ffa500'><b><u>{}</u></b></span>",
            },
        },
    },

    // System
    "custom/system": {
        "format": "",
        "tooltip": false
    },

    // CPU
    "cpu": {
		"interval": 3,
        "format": "\uf4bc  {usage}%",
		"min-length": 6,
    },

    // Memory
    "memory": {
		"interval": 5,
        "format": "\ue266  {}% ",
		"min-length": 6,
    },

	// GPU Usage
	"custom/gpu-usage": {
		"format": "󰾲  {}",
		"exec": "~/.cargo/bin/gpu-usage-waybar --interval 5000",
		"return-type": "json",
		// "format-icons": "󰾲",
	},

	// CPU Temp
	"temperature": {
		"thermal-zone": 0,
		"hwmon-path-abs": "/sys/devices/pci0000:00/0000:00:18.3/hwmon",
		"input-filename": "temp1_input",
		"critical-threshold": 99,
		"format-critical": "\uf2c7 {temperatureC}°C \uf071",
		"format": "\uf2c9 {temperatureC}°C",
		"min-length": 6
	},

    // Harddisc space used
    "disk": {
        "interval": 30,
        "format": "D {percentage_used}% ",
        "path": "/",
        "on-click": "alacritty -e htop"
    }, 

	// Group Hardware
	"group/hardwareUsage": {
		"orientation": "horizontal",
		"modules": [
			"cpu",
			"temperature",
			"memory",
			"custom/gpu-usage",
		]
	},

	// Language
    "hyprland/language": {
        "format": " {short} ",
		"on-click": "hyprctl switchxkblayout current next",
		"min-length": 3
    },
    
  // Network
  "network": {
    "format": "{ifname}",
    "format-wifi": " {essid} ({signalStrength}%)",
    "format-ethernet": "  {ifname}",
    "format-disconnected": "Disconnected ⚠",
    "tooltip-format": " {ifname} via {gwaddri}",
    "tooltip-format-wifi": "  {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nUp: {bandwidthUpBits} Down: {bandwidthDownBits}",
    "tooltip-format-ethernet": " {ifname}\nIP: {ipaddr}\n up: {bandwidthUpBits} down: {bandwidthDownBits}",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50,
    "on-click": "nm-connection-editor",
	"on-click-right": "firewall-config"
  },

    // Battery
    // "battery": {
    //     "states": {
    //         // "good": 95,
    //         "warning": 30,
    //         "critical": 15
    //     },
    //     "format": "{icon}   {capacity}%",
    //     "format-charging": "  {capacity}%",
    //     "format-plugged": "  {capacity}%",
    //     "format-alt": "{icon}  {time}",
    //     // "format-good": "", // An empty format will hide the module
    //     // "format-full": "",
    //     "format-icons": [" ", " ", " ", " ", " "]
    // },

    // Pulseaudio
    "pulseaudio": {
        "format": "{icon}  {volume}%",
        "format-bluetooth": "{volume}% {icon} {format_source}",
        "format-bluetooth-muted": " {icon} {format_source}",
        "format-muted": "\uf6a9{format_source}",
        "format-source": "{volume}% ",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "\uf027", " "]
        },
        "on-click": "pavucontrol-qt",
		"min-length": 7
    },

	// wireplumber
	"wireplumber": {
		"format": "{volume}%",
		"format-muted": "\uf6a9",
		"format-source": " {source_volume}%",
		"format-source-muted": "\uf131",
		"on-click": "pavucontrol-qt",
		"format-icons": ["", "\uf027", " "]
	},

    // Bluetooth
    // "bluetooth": {
    //     "format-disabled": "",
    //     "format-off": "",
    //     "interval": 30,
    //     "on-click": "blueman-manager",
    //     "format-no-controller": ""
    // },

    // Other
    "user": {
        "format": "{user}",
        "interval": 60,
        "icon": false,
    },

    // Idle Inhibator
    "idle_inhibitor": {
        "format": "{icon}",
        "tooltip": true,
        "format-icons":{
            "activated": "",
            "deactivated": ""
        },
        "on-click-right": "hyprlock"        
    },

	// Backlight/Slider
	// "backlight/slider": {
	// "min": 10,
	// "max": 100,
	// "orientation": "horizontal",
	// "device": "backlightctl"
	// },
	
}
